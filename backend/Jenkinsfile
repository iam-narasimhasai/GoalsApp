pipeline {
    agent any
    tools {
        nodejs 'nodejs-23-6' 
    }
    environment {
        MONGO_URL = "${params.MONGO_URL}" 
    }
    stages {
        // stage('Git Checkout') {
        //     steps {
        //         git branch: 'pre-prod', url: 'https://github.com/iam-narasimhasai/GoalsApp'
        //     }
        // }
        
        stage('Installing Dependencies') {
            steps {
                script {
                    sh '''
                        cd backend
                        npm install
                    '''
                }
            }
        }
        
        stage('Run Unit Testing') {
            steps {
                script {
                    sh '''
                        cd backend
                        npm run test
                    '''
                }
            }
        }
        
        stage('Code Coverage') {
            steps {
                script {
                    sh '''
                        cd backend
                        npm run coverage
                    '''
                }
            }
        }
    }
}
