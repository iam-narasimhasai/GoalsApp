pipeline {
    agent any
    tools {
        nodejs 'nodejs-23-6' 
        
    }
    environment {
        MONGO_URL = "${params.MONGO_URL}" 
    }
    stages {
        // stage('Git Checkout') {
        //     steps {
        //         git branch: 'pre-prod', url: 'https://github.com/iam-narasimhasai/GoalsApp'
        //     }
        // } this step can be avoided as we directly used Pipelinescript from SCM
        
        stage('Installing Dependencies') {
            steps {
                script {
                    sh '''
                        cd backend
                        npm install --no-audit
                    '''
                }
            }
        }


        stage('OWASP Dependency Check'){
            steps{
                sh '''
                    cd backend
                    dependencyCheck additionalArguments: '''--scan --out --prettyPrint''', odcInstallation: 'OWASP-DepCheck-12'
                    echo $?
                '''
            }
        }
        stage('NPM Dependency Audit'){
            steps{
                sh '''
                    cd backend
                    npm audit --audit-level=critical
                    echo $?
                '''
            }
        }



        stage('Run Unit Testing') {
            steps {
                script {
                    sh '''
                        cd backend
                        npm run test
                    '''
                }
            }
        }
        
        stage('Code Coverage') {
            steps {
                script {
                    sh '''
                        cd backend
                        npm run coverage
                    '''
                }
            }
        }


















    }
}
